@import url('https://fonts.googleapis.com/css2?family=Public+Sans:wght@300;400;700&display=swap');
color-1= white
color-2= hsl(220, 16%, 96%)
color-3= hsl(0, 0%, 98%)
color-4= blue
white-color= white
text-color-dark= hsl(233, 26%, 24%)
text-color= gray
primary-font= 'Public Sans', sans-serif;
button-color= hsl(136, 65%, 51%)
